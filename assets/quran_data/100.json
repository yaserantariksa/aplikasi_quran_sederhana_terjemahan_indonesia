{
  "id": 100,
  "name": "العاديات",
  "transliteration": "Al-'Adiyat",
  "translation": "Berlari Kencang",
  "type": "meccan",
  "total_verses": 11,
  "verses": [
    {
      "id": 1,
      "text": "وَٱلۡعَٰدِيَٰتِ ضَبۡحٗا",
      "translation": "Demi kuda perang yang berlari kencang terengah-engah",
      "transliteration": "WaalAAadiyati dabhan"
    },
    {
      "id": 2,
      "text": "فَٱلۡمُورِيَٰتِ قَدۡحٗا",
      "translation": "dan kuda yang memercikkan bunga api (dengan pukulan kuku kakinya)",
      "transliteration": "Faalmooriyati qadhan"
    },
    {
      "id": 3,
      "text": "فَٱلۡمُغِيرَٰتِ صُبۡحٗا",
      "translation": "dan kuda yang menyerang (dengan tiba-tiba) pada waktu pagi",
      "transliteration": "Faalmugheerati subhan"
    },
    {
      "id": 4,
      "text": "فَأَثَرۡنَ بِهِۦ نَقۡعٗا",
      "translation": "sehingga menerbangkan debu",
      "transliteration": "Faatharna bihi naqAAan"
    },
    {
      "id": 5,
      "text": "فَوَسَطۡنَ بِهِۦ جَمۡعًا",
      "translation": "lalu menyerbu ke tengah-tengah kumpulan musuh",
      "transliteration": "Fawasatna bihi jamAAan"
    },
    {
      "id": 6,
      "text": "إِنَّ ٱلۡإِنسَٰنَ لِرَبِّهِۦ لَكَنُودٞ",
      "translation": "sungguh, manusia itu sangat ingkar, (tidak bersyukur) kepada Tuhannya",
      "transliteration": "Inna alinsana lirabbihi lakanoodun"
    },
    {
      "id": 7,
      "text": "وَإِنَّهُۥ عَلَىٰ ذَٰلِكَ لَشَهِيدٞ",
      "translation": "dan sesungguhnya dia (manusia) menyaksikan (mengakui) keingkarannya",
      "transliteration": "Wainnahu AAala thalika lashaheedun"
    },
    {
      "id": 8,
      "text": "وَإِنَّهُۥ لِحُبِّ ٱلۡخَيۡرِ لَشَدِيدٌ",
      "translation": "dan sesungguhnya cintanya kepada harta benar-benar berlebihan",
      "transliteration": "Wainnahu lihubbi alkhayri lashadeedun"
    },
    {
      "id": 9,
      "text": "۞أَفَلَا يَعۡلَمُ إِذَا بُعۡثِرَ مَا فِي ٱلۡقُبُورِ",
      "translation": "Maka tidakkah dia mengetahui apabila apa yang di dalam kubur dikeluarkan",
      "transliteration": "Afala yaAAlamu itha buAAthira ma fee alquboori"
    },
    {
      "id": 10,
      "text": "وَحُصِّلَ مَا فِي ٱلصُّدُورِ",
      "translation": "dan apa yang tersimpan di dalam dada dikeluarkan",
      "transliteration": "Wahussila ma fee alssudoori"
    },
    {
      "id": 11,
      "text": "إِنَّ رَبَّهُم بِهِمۡ يَوۡمَئِذٖ لَّخَبِيرُۢ",
      "translation": "sungguh, Tuhan mereka pada hari itu Mahateliti terhadap keadaan mereka",
      "transliteration": "Inna rabbahum bihim yawmaithin lakhabeerun"
    }
  ]
}
